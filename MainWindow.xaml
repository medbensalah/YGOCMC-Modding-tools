<Window x:Class="YGO_CMC_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YGO_CMC_Editor"
        mc:Ignorable="d"
        FontSize="16"
        Background="#FFF3F3F3"
        FontFamily="Consolas"
        Title="Editor" Width="1200" Height="350">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Padding="10" VerticalAlignment="Top" Margin="25,25,25,25">
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto">

                <!-- ISO -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="600"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ISO:" VerticalAlignment="Center" Grid.Column="0" />
                    <TextBox x:Name="IsoName" Height="30" Grid.Column="1" Margin="10,0" VerticalContentAlignment="Center"/>
                    <Button Content="Browse" Click="BrowseIsoFile_Click" Width="100" Height="30" Grid.Column="2" Margin="10,0"/>
                </Grid>

                <!-- Monsters -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="600"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Monsters TSV:" VerticalAlignment="Center" Grid.Column="0" />
                    <TextBox x:Name="MonstersTsv" Height="30" Grid.Column="1" Margin="10,0" VerticalContentAlignment="Center"/>
                    <Button Content="Browse" Click="BrowseMonstersTsv_Click" Width="100" Height="30" Grid.Column="2" Margin="10,0"/>
                    <Button Content="Patch Monsters" Click="PatchMonsters_Click" Width="170" Height="30" Grid.Column="3" Margin="10,0"/>
                </Grid>

                <!-- Opponent Units -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="600"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Opponent Units TSV:" VerticalAlignment="Center" Grid.Column="0" />
                    <TextBox x:Name="OpponentTsv" Height="30" Grid.Column="1" Margin="10,0" VerticalContentAlignment="Center"/>
                    <Button Content="Browse" Click="BrowseOpponentTsv_Click" Width="100" Height="30" Grid.Column="2" Margin="10,0"/>
                    <Button Content="Patch Opponents" Click="PatchOpponents_Click" Width="170" Height="30" Grid.Column="3" Margin="10,0"/>
                </Grid>

                <!-- Shops -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="600"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Shops TSV:" VerticalAlignment="Center" Grid.Column="0" />
                    <TextBox x:Name="ShopsTsv" Height="30" Grid.Column="1" Margin="10,0" VerticalContentAlignment="Center"/>
                    <Button Content="Browse" Click="BrowseShopsTsv_Click" Width="100" Height="30" Grid.Column="2" Margin="10,0"/>
                    <Button Content="Patch Shops" Click="PatchShops_Click" Width="170" Height="30" Grid.Column="3" Margin="10,0"/>
                </Grid>
                
                <!-- Starter Kits -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="600"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Starter Kits TSV:" VerticalAlignment="Center" Grid.Column="0" />
                    <TextBox x:Name="StarterTsv" Height="30" Grid.Column="1" Margin="10,0" VerticalContentAlignment="Center"/>
                    <Button Content="Browse" Click="BrowseStarterTsv_Click" Width="100" Height="30" Grid.Column="2" Margin="10,0"/>
                    <Button Content="Patch Starter Kits" Click="PatchStarterKits_Click" Width="170" Height="30" Grid.Column="3" Margin="10,0"/>
                </Grid>

                <!-- Starter Symbols -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="600"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Starter Symbols TSV:" VerticalAlignment="Center" Grid.Column="0" />
                    <TextBox x:Name="StarterSymbolsTsv" Height="30" Grid.Column="1" Margin="10,0" VerticalContentAlignment="Center"/>
                    <Button Content="Browse" Click="BrowseStarterSymbolsTsv_Click" Width="100" Height="30" Grid.Column="2" Margin="10,0"/>
                    <Button Content="Patch Starter Sym." Click="PatchStarterSymbols_Click" Width="170" Height="30" Grid.Column="3" Margin="10,0"/>
                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</Window>
